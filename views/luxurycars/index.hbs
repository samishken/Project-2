<h1>DC Elite Cars Inventory List</h1>
<div id="access inventory">
      <form action="/luxurycars/new" method="add">
        <button onclick="text">Add Inventory</button>
      </form>
  </div>


<section class="inventory_list">
  {{#each cars}}
  <a href="/luxurycars/{{id}}" class="show details">
     <div class="inventories">
    <div class="card horizontal">
      <div class="card-image">
        <img src="https://theelitecars.com/wp-content/uploads/2018/03/123-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-Recovered-3-200x150.jpg">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <p><h4>{{make}}</h4> <h3>{{model}}</h3>  {{year}}</p>
        </div>
       
      </div>
    </div>
  </div>
       
  </a><style>a {text-decoration: none; }</style>
  {{/each}}
 
</section>

